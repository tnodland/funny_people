<!DOCTYPE html>
<html>
  <head>
    <title>FunnyPeople</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <section id="nav-bar">
      <% if @comedians.nil? && @comedian.nil? %>
        <%= link_to "Go to Comedians", comedians_path %>
        <%= link_to "Create a new Comedian", new_comedian_path %>
      <% else %>
        <% if !@comedians.nil? %>
          <%= link_to "Create a new Comedian", new_comedian_path %>
        <% else %>
          <%= link_to "Return to Comedians", comedians_path %>
        <% end %>
      <% end %>

      <% if @comedian %>
        <% unless @comedian.id.nil? %>
          <%= link_to "Create a new Comedian", new_comedian_path %>
        <% end %>
      <% end %>
    </section>
    <%= yield %>
  </body>
</html>
